---
import contact from '../../data/contact.json';
import navigation from '../../data/navigation.json';
---

<footer class="bg-[var(--color-navy)] text-white mt-auto no-print">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10">
      <!-- Practice info -->
      <div class="lg:col-span-1">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-10 h-10 bg-[var(--color-purple)] rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5"></path>
            </svg>
          </div>
          <span class="font-bold text-lg">{contact.name}</span>
        </div>
        <address class="not-italic text-white/70 space-y-1 font-light">
          <p>{contact.address.street}</p>
          <p>{contact.address.postal} {contact.address.city}</p>
        </address>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="font-bold text-base mb-5">Contact</h3>
        <ul class="space-y-3 text-white/70 font-light">
          <li>
            <a
              href={`tel:${contact.phone.replace('-', '')}`}
              class="hover:text-white transition-colors inline-flex items-center gap-2"
            >
              <svg class="w-4 h-4 text-[var(--color-purple-light)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              {contact.phone}
            </a>
          </li>
          <li>
            <a
              href={`mailto:${contact.email}`}
              class="hover:text-white transition-colors inline-flex items-center gap-2"
            >
              <svg class="w-4 h-4 text-[var(--color-purple-light)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              {contact.email}
            </a>
          </li>
        </ul>
      </div>

      <!-- Quick links -->
      <div>
        <h3 class="font-bold text-base mb-5">Snelkoppelingen</h3>
        <ul class="space-y-3 text-white/70 font-light">
          <li>
            <a href="/herhaalrecepten" class="hover:text-white transition-colors">
              Herhaalrecepten aanvragen
            </a>
          </li>
          <li>
            <a href="/afspraak-maken" class="hover:text-white transition-colors">
              Afspraak maken
            </a>
          </li>
          <li>
            <a href="/routebeschrijving" class="hover:text-white transition-colors">
              Routebeschrijving
            </a>
          </li>
          <li>
            <a href="/team" class="hover:text-white transition-colors">
              Ons team
            </a>
          </li>
          <li>
            <a
              href="https://www.uwzorgonline.nl"
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-white transition-colors inline-flex items-center gap-1"
            >
              Uw Zorg Online
              <svg class="w-3.5 h-3.5 opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
          </li>
        </ul>
      </div>

      <!-- Opening hours -->
      <div>
        <h3 class="font-bold text-base mb-5">Openingstijden</h3>
        <dl class="text-white/70 space-y-3 font-light">
          <div>
            <dt class="font-medium text-white text-sm">Telefonisch bereikbaar</dt>
            <dd>Ma t/m Vr: 08:00 - 17:00</dd>
          </div>
          <div>
            <dt class="font-medium text-white text-sm">Afspraken maken</dt>
            <dd>{contact.hours.appointments}</dd>
          </div>
          <div>
            <dt class="font-medium text-white text-sm">Medicijnen ophalen</dt>
            <dd>{contact.hours.pharmacyPickup}</dd>
          </div>
        </dl>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="border-t border-white/10 mt-12 pt-8">
      <div class="flex flex-wrap items-center justify-between gap-4">
        <p class="text-white/50 text-sm font-light">
          &copy; {new Date().getFullYear()} {contact.name}. Alle rechten voorbehouden.
        </p>
        <nav aria-label="Footer navigatie">
          <ul class="flex items-center gap-6 text-sm">
            {navigation.footer.map((item: { href: string; label: string }) => (
              <li>
                <a href={item.href} class="text-white/70 hover:text-white transition-colors font-light">
                  {item.label}
                </a>
              </li>
            ))}
            <li>
              <a href="/klachtenregeling" class="text-white/70 hover:text-white transition-colors font-light">
                Klachtenregeling
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</footer>
