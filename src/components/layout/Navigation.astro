---
import navigation from '../../data/navigation.json';

const currentPath = Astro.url.pathname;

// Helper to check if a path is active (exact match or starts with for nested pages)
function isActive(href: string, children?: { href: string }[]): boolean {
  if (href === '/') {
    return currentPath === '/';
  }
  if (currentPath === href || currentPath === href + '/') {
    return true;
  }
  // Check if any child is active
  if (children) {
    return children.some(child => currentPath === child.href || currentPath === child.href + '/');
  }
  return false;
}

// Check if a dropdown child is active
function isChildActive(href: string): boolean {
  return currentPath === href || currentPath === href + '/';
}

type NavItem = {
  label: string;
  href: string;
  children?: { label: string; href: string }[];
};
---

<nav class="bg-primary-600" aria-label="Hoofdnavigatie">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Mobile menu button -->
    <div class="lg:hidden flex items-center justify-between py-3">
      <span class="text-white font-medium">Menu</span>
      <button
        id="mobile-menu-button"
        class="text-white p-2 rounded-lg hover:bg-primary-700"
        aria-expanded="false"
        aria-controls="mobile-menu"
        aria-label="Open menu"
      >
        <svg id="menu-icon-open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg id="menu-icon-close" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Desktop navigation -->
    <ul class="hidden lg:flex items-center gap-1" role="menubar">
      {/* Main navigation items */}
      {(navigation.main as NavItem[]).map((item) => (
        <li class="relative group" role="none">
          {item.children ? (
            <>
              <button
                class:list={[
                  "flex items-center gap-1 px-4 py-4 text-white hover:bg-primary-700 rounded-t-lg transition-colors",
                  { "border-b-2 border-white": isActive(item.href, item.children) }
                ]}
                role="menuitem"
                aria-haspopup="true"
                aria-expanded="false"
              >
                {item.label}
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
              <ul
                class="absolute left-0 top-full bg-white shadow-lg rounded-b-lg py-2 min-w-max opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50"
                role="menu"
              >
                {item.children.map((child) => (
                  <li role="none">
                    <a
                      href={child.href}
                      class:list={[
                        "block px-4 py-3 text-gray-700 hover:bg-primary-50 hover:text-primary-700 no-underline",
                        { "bg-primary-50 text-primary-700 font-medium": isChildActive(child.href) }
                      ]}
                      role="menuitem"
                    >
                      {child.label}
                    </a>
                  </li>
                ))}
              </ul>
            </>
          ) : (
            <a
              href={item.href}
              class:list={[
                "block px-4 py-4 text-white hover:bg-primary-700 rounded-lg transition-colors no-underline",
                { "border-b-2 border-white": isActive(item.href) }
              ]}
              role="menuitem"
              aria-current={isActive(item.href) ? "page" : undefined}
            >
              {item.label}
            </a>
          )}
        </li>
      ))}

      {/* Spacer to push CTA buttons to the right */}
      <li class="flex-grow" role="none"></li>

      {/* CTA buttons */}
      {(navigation.cta as NavItem[]).map((item, index) => (
        <li role="none">
          <a
            href={item.href}
            class:list={[
              "block px-4 py-2 rounded-lg transition-colors font-medium no-underline",
              index === 0
                ? "bg-white text-primary-700 hover:bg-primary-50"
                : "bg-accent text-white hover:bg-accent-dark",
              { "ring-2 ring-white ring-offset-2 ring-offset-primary-600": isActive(item.href) }
            ]}
            role="menuitem"
            aria-current={isActive(item.href) ? "page" : undefined}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>

    <!-- Mobile navigation -->
    <div
      id="mobile-menu"
      class="lg:hidden hidden"
      role="menu"
    >
      <ul class="py-2 space-y-1">
        {/* Main navigation items */}
        {(navigation.main as NavItem[]).map((item) => (
          <li role="none">
            {item.children ? (
              <div class="mobile-dropdown">
                <button
                  class:list={[
                    "w-full flex items-center justify-between px-4 py-3 text-white hover:bg-primary-700 rounded-lg",
                    { "bg-primary-700 border-l-4 border-white": isActive(item.href, item.children) }
                  ]}
                  aria-expanded="false"
                >
                  {item.label}
                  <svg class="w-5 h-5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
                <ul class="hidden ml-4 mt-1 space-y-1 bg-primary-700 rounded-lg">
                  {item.children.map((child) => (
                    <li role="none">
                      <a
                        href={child.href}
                        class:list={[
                          "block px-4 py-3 text-white hover:bg-primary-800 rounded-lg no-underline",
                          { "bg-primary-800 font-medium": isChildActive(child.href) }
                        ]}
                        role="menuitem"
                        aria-current={isChildActive(child.href) ? "page" : undefined}
                      >
                        {child.label}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ) : (
              <a
                href={item.href}
                class:list={[
                  "block px-4 py-3 text-white hover:bg-primary-700 rounded-lg no-underline",
                  { "bg-primary-700 border-l-4 border-white": isActive(item.href) }
                ]}
                role="menuitem"
                aria-current={isActive(item.href) ? "page" : undefined}
              >
                {item.label}
              </a>
            )}
          </li>
        ))}

        {/* Divider */}
        <li class="border-t border-primary-500 my-2" role="none"></li>

        {/* CTA buttons */}
        {(navigation.cta as NavItem[]).map((item, index) => (
          <li role="none">
            <a
              href={item.href}
              class:list={[
                "block px-4 py-3 rounded-lg font-medium no-underline text-center mx-2",
                index === 0
                  ? "bg-white text-primary-700 hover:bg-primary-50"
                  : "bg-accent text-white hover:bg-accent-dark",
                { "ring-2 ring-white": isActive(item.href) }
              ]}
              role="menuitem"
              aria-current={isActive(item.href) ? "page" : undefined}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</nav>

<style>
  /* Ensure no underlines on nav links */
  nav a,
  nav button {
    text-decoration: none !important;
  }

  nav a:hover,
  nav button:hover {
    text-decoration: none !important;
  }
</style>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIconOpen = document.getElementById('menu-icon-open');
  const menuIconClose = document.getElementById('menu-icon-close');

  mobileMenuButton?.addEventListener('click', () => {
    const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';

    mobileMenuButton.setAttribute('aria-expanded', String(!isExpanded));
    mobileMenu?.classList.toggle('hidden');
    menuIconOpen?.classList.toggle('hidden');
    menuIconClose?.classList.toggle('hidden');
  });

  // Mobile dropdown toggles
  document.querySelectorAll('.mobile-dropdown button').forEach((button) => {
    button.addEventListener('click', () => {
      const dropdown = button.nextElementSibling as HTMLElement;
      const isExpanded = button.getAttribute('aria-expanded') === 'true';
      const icon = button.querySelector('svg');

      button.setAttribute('aria-expanded', String(!isExpanded));
      dropdown?.classList.toggle('hidden');
      icon?.classList.toggle('rotate-180');
    });
  });
</script>
