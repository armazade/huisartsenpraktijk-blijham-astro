---
interface Props {
  variant?: 'default' | 'soft' | 'purple' | 'blue' | 'sage' | 'orange' | 'warning';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  hover?: boolean;
  shadow?: boolean;
  class?: string;
}

const {
  variant = 'default',
  padding = 'md',
  hover = false,
  shadow = false,
  class: className = '',
} = Astro.props;

const baseClasses = 'card';

const variantClasses = {
  default: 'bg-white',
  soft: 'card-soft',
  purple: 'card-purple',
  blue: 'card-blue',
  sage: 'card-sage',
  orange: 'card-orange',
  warning: 'bg-[var(--color-warning-light)] border-l-4 border-[var(--color-warning)]',
};

const paddingClasses = {
  none: 'p-0',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};

const classes = `${baseClasses} ${variantClasses[variant]} ${paddingClasses[padding]} ${hover ? 'card-hover cursor-pointer' : ''} ${shadow ? 'card-shadow' : ''} ${className}`;
---

<div class={classes}>
  <slot />
</div>
