---
import contact from '../../data/contact.json';
---

<div class="card card-shadow">
  <h3 class="font-bold text-[var(--color-navy)] mb-4 flex items-center gap-2">
    <svg class="w-5 h-5 text-[var(--color-purple)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
    </svg>
    Contact
  </h3>

  <address class="not-italic space-y-4">
    <div class="flex items-start gap-3">
      <div class="icon-wrapper-purple shrink-0 w-10 h-10">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
      </div>
      <div class="text-[var(--color-navy-light)] font-light">
        <p>{contact.address.street}</p>
        <p>{contact.address.postal} {contact.address.city}</p>
      </div>
    </div>

    <a
      href={`tel:${contact.phone.replace('-', '')}`}
      class="flex items-center gap-3 p-3 -mx-3 rounded-lg hover:bg-[var(--color-bg-soft)] transition-colors group"
    >
      <div class="icon-wrapper-purple w-10 h-10 shrink-0">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
      </div>
      <span class="text-[var(--color-purple)] font-bold text-lg group-hover:text-[var(--color-purple-hover)]">
        {contact.phone}
      </span>
    </a>

    <a
      href={`mailto:${contact.email}`}
      class="flex items-center gap-3 p-3 -mx-3 rounded-lg hover:bg-[var(--color-bg-soft)] transition-colors group"
    >
      <div class="icon-wrapper-blue w-10 h-10 shrink-0">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
      </div>
      <span class="text-[var(--color-blue)] font-medium group-hover:text-[var(--color-blue-hover)] break-all">
        {contact.email}
      </span>
    </a>
  </address>

  <div class="divider"></div>

  <div class="text-sm">
    <p class="text-[var(--color-navy-light)] font-light mb-1">Afspraken maken</p>
    <p class="font-semibold text-[var(--color-navy)]">{contact.hours.appointments}</p>
  </div>
</div>
