---
interface Props {
  currentStep: number;
  totalSteps: number;
}

const { currentStep, totalSteps } = Astro.props;

const steps = [
  { number: 1, label: 'Persoonsgegevens' },
  { number: 2, label: 'Adresgegevens' },
  { number: 3, label: 'Medicijnen' },
  { number: 4, label: 'Samenvatting' },
];
---

<div class="step-indicator mb-8" aria-label={`Stap ${currentStep} van ${totalSteps}`}>
  {steps.map((step) => (
    <div
      class:list={[
        'step',
        { 'completed': step.number < currentStep },
        { 'active': step.number === currentStep },
      ]}
    >
      <div class="step-number">
        {step.number < currentStep ? (
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        ) : (
          step.number
        )}
      </div>
      <span class="text-sm mt-2 text-center hidden sm:block">
        {step.label}
      </span>
    </div>
  ))}
</div>
