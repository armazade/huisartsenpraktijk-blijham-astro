---
import Layout from '../components/layout/Layout.astro';
import EmergencyTable from '../components/content/EmergencyTable.astro';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';
import contact from '../data/contact.json';
---

<Layout title="Welkom" description="Huisartsenpraktijk Blijham - Uw huisarts in Blijham. Maak een afspraak of vraag een herhaalrecept aan." fullWidth={true}>
  <!-- Hero Section -->
  <section class="hero">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:grid lg:grid-cols-2 lg:gap-16 items-center">
        <div class="hero-content">
          <h1 class="hero-title text-balance">
            Welkom bij {contact.name}
          </h1>
 
          <div class="flex flex-wrap gap-4">
            <Button href="/afspraak-maken" size="lg">
              Afspraak maken
            </Button>
            <Button href="/herhaalrecepten" variant="outline" size="lg">
              Herhaalrecept aanvragen
            </Button>
          </div>
        </div>

        <!-- Hero visual / quick info -->
        <div class="hidden lg:block">
          <div class="card card-shadow p-8">
            <h2 class="text-xl font-bold text-[var(--color-navy)] mb-6 flex items-center gap-3">
              <span class="icon-wrapper-purple">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </span>
              Contact opnemen
            </h2>
            <div class="space-y-4">
              <a
                href={`tel:${contact.phone.replace('-', '')}`}
                class="flex items-center gap-4 p-4 rounded-xl bg-[var(--color-bg-soft)] hover:bg-[var(--color-purple-light)] transition-colors group"
              >
                <span class="text-2xl font-bold text-[var(--color-purple)] group-hover:text-[var(--color-purple-hover)]">
                  {contact.phone}
                </span>
                <span class="text-[var(--color-navy-light)] text-sm">Praktijklijn</span>
              </a>
              <div class="grid grid-cols-2 gap-4">
                <div class="p-4 rounded-xl bg-[var(--color-bg-soft)]">
                  <p class="text-sm text-[var(--color-navy-light)] mb-1">Afspraken</p>
                  <p class="font-semibold text-[var(--color-navy)]">{contact.hours.appointments}</p>
                </div>
                <div class="p-4 rounded-xl bg-[var(--color-bg-soft)]">
                  <p class="text-sm text-[var(--color-navy-light)] mb-1">Medicijnen</p>
                  <p class="font-semibold text-[var(--color-navy)]">{contact.hours.pharmacyPickup}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main content with sidebar -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="lg:grid lg:grid-cols-12 lg:gap-12">
      <!-- Main content -->
      <div class="lg:col-span-8 space-y-12">
        <!-- Quick Actions -->
        <section>
          <h2 class="text-2xl font-bold text-[var(--color-navy)] mb-6">Snel naar</h2>
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
            <a href="/afspraak-maken" class="card card-hover card-shadow group">
              <div class="text-center">
                <div class="icon-wrapper-purple mx-auto mb-4 group-hover:scale-110 transition-transform">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <h3 class="font-bold text-[var(--color-navy)] mb-2">Afspraak maken</h3>
                <p class="text-sm text-[var(--color-navy-light)] font-light">Maak een afspraak bij de huisarts</p>
              </div>
            </a>

            <a href="/herhaalrecepten" class="card card-hover card-shadow group">
              <div class="text-center">
                <div class="icon-wrapper-sage mx-auto mb-4 group-hover:scale-110 transition-transform">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                </div>
                <h3 class="font-bold text-[var(--color-navy)] mb-2">Herhaalrecepten</h3>
                <p class="text-sm text-[var(--color-navy-light)] font-light">Vraag uw medicijnen online aan</p>
              </div>
            </a>

            <a href="/routebeschrijving" class="card card-hover card-shadow group">
              <div class="text-center">
                <div class="icon-wrapper-blue mx-auto mb-4 group-hover:scale-110 transition-transform">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <h3 class="font-bold text-[var(--color-navy)] mb-2">Route</h3>
                <p class="text-sm text-[var(--color-navy-light)] font-light">Bekijk hoe u bij ons komt</p>
              </div>
            </a>
          </div>
        </section>

        <!-- Emergency Numbers -->
        <section>
          <EmergencyTable />
        </section>

        <!-- Important Announcements -->
        <section>
          <Card variant="warning" padding="lg">
            <h2 class="text-xl font-bold text-[var(--color-navy)] mb-4 flex items-center gap-3">
              <span class="w-8 h-8 rounded-full bg-[var(--color-warning)] flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </span>
              Belangrijke mededelingen
            </h2>
            <div class="space-y-4 text-[var(--color-navy)]">
              <p>
                <strong>Pauzetijden:</strong> Tussen {contact.hours.break} zijn wij gesloten voor pauze.
                U kunt dan geen telefonisch contact met ons opnemen.
              </p>
              <p>
                <strong>Medicijnen ophalen:</strong> U kunt uw medicijnen ophalen bij de uitdeelpost
                tussen {contact.hours.pharmacyPickup}.
              </p>
            </div>
          </Card>
        </section>

        <!-- LSP/VZVZ Information -->
        <section>
          <Card variant="soft" padding="lg">
            <h2 class="text-xl font-bold text-[var(--color-navy)] mb-4">
              Delen van medische gegevens (LSP)
            </h2>
            <p class="text-[var(--color-navy-light)] mb-4 font-light leading-relaxed">
              Het Landelijk Schakelpunt (LSP) is een elektronisch netwerk waarmee zorgverleners
              veilig medische gegevens kunnen uitwisselen. Dit kan belangrijk zijn wanneer u
              bijvoorbeeld buiten kantoortijden zorg nodig heeft van een arts die u niet kent.
            </p>
            <p class="text-[var(--color-navy-light)] mb-6 font-light leading-relaxed">
              U bepaalt zelf of u wilt dat uw gegevens via het LSP beschikbaar zijn voor andere
              zorgverleners.
            </p>
            <Button href="https://www.volgjezorg.nl" variant="outline" external>
              Geef toestemming via Volg je Zorg
            </Button>
          </Card>
        </section>

        <!-- Service Apotheek App -->
        <section>
          <Card variant="purple" padding="lg">
            <div class="flex items-start gap-4">
              <div class="icon-wrapper bg-white/20 text-white shrink-0">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h2 class="text-xl font-bold text-[var(--color-navy)] mb-3">
                  Medicijnen bestellen via de Service Apotheek App
                </h2>
                <p class="text-[var(--color-navy-light)] mb-6 font-light leading-relaxed">
                  Bent u patiÃ«nt bij Service Apotheek Blijham? Dan kunt u eenvoudig uw herhaalrecepten
                  bestellen via de Service Apotheek App.
                </p>
                <div class="flex flex-wrap gap-3">
                  <Button
                    href="https://apps.apple.com/nl/app/service-apotheek/id1041054514"
                    variant="secondary"
                    size="sm"
                    external
                  >
                    <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                    </svg>
                    App Store
                  </Button>
                  <Button
                    href="https://play.google.com/store/apps/details?id=nl.mijnserviceapotheek.app"
                    variant="secondary"
                    size="sm"
                    external
                  >
                    <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
                    </svg>
                    Google Play
                  </Button>
                </div>
              </div>
            </div>
          </Card>
        </section>
      </div>

      <!-- Sidebar -->
      <aside class="lg:col-span-4 mt-12 lg:mt-0">
        <!-- Mobile contact info -->
        <div class="lg:hidden mb-8">
          <Card shadow>
            <h3 class="font-bold text-[var(--color-navy)] mb-4">Contact</h3>
            <a
              href={`tel:${contact.phone.replace('-', '')}`}
              class="flex items-center gap-3 p-4 rounded-xl bg-[var(--color-bg-soft)] hover:bg-[var(--color-purple-light)] transition-colors group mb-4"
            >
              <span class="icon-wrapper-purple">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </span>
              <span class="text-xl font-bold text-[var(--color-purple)]">{contact.phone}</span>
            </a>
            <p class="text-[var(--color-navy-light)] text-sm font-light">
              {contact.address.street}, {contact.address.postal} {contact.address.city}
            </p>
          </Card>
        </div>

        <!-- Sidebar content -->
        <div class="space-y-6 sticky top-32">
          <!-- Ik geef toestemming -->
          <Card variant="sage">
            <div class="flex items-start gap-3 mb-4">
              <div class="icon-wrapper-sage shrink-0">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-[var(--color-navy)] mb-1">Ik geef toestemming</h3>
                <p class="text-sm text-[var(--color-navy-light)] font-light">
                  Geef toestemming voor inzage in uw medische gegevens.
                </p>
              </div>
            </div>
            <a
              href="https://www.ikgeeftoestemming.nl"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm w-full bg-[var(--color-sage)] text-white hover:bg-[var(--color-sage-hover)]"
            >
              Naar ikgeeftoestemming.nl
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
          </Card>

          <!-- Uw Zorg Online -->
          <Card variant="blue">
            <div class="flex items-start gap-3 mb-4">
              <div class="icon-wrapper-blue shrink-0">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-[var(--color-navy)] mb-1">Uw Zorg Online</h3>
                <p class="text-sm text-[var(--color-navy-light)] font-light">
                  Veilig online contact met de praktijk.
                </p>
              </div>
            </div>
            <a
              href="https://www.uwzorgonline.nl"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-blue btn-sm w-full"
            >
              Inloggen
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
          </Card>

          <!-- News link -->
          <Card shadow>
            <h3 class="font-bold text-[var(--color-navy)] mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-[var(--color-purple)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
              </svg>
              Nieuws
            </h3>
            <a
              href="/nieuws"
              class="group flex items-center justify-between p-3 -mx-3 rounded-lg hover:bg-[var(--color-bg-soft)] transition-colors"
            >
              <span class="text-[var(--color-blue)] font-medium group-hover:text-[var(--color-purple)]">
                Bekijk alle nieuwsberichten
              </span>
              <svg class="w-5 h-5 text-[var(--color-navy-light)] group-hover:text-[var(--color-purple)] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </Card>
        </div>
      </aside>
    </div>
  </div>
</Layout>
